<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufjf.dcc.pesquisa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.ufjf.app.ui.NewsActivity"
            android:label="@string/news">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.ufjf.app.ui.SurveysExplorerActivity"
            android:label="@string/surveys" />
        <activity android:name="br.ufjf.app.ui.SurveyActivity" />
        <activity android:name="br.ufjf.app.ui.AuthActivity" />
        <activity
            android:name="br.ufjf.app.ui.CalendarActivity"
            android:label="@string/calendar" />
    </application>

</manifest>
